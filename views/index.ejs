<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/styles.css" />
    <title><%= title%></title>
    <link rel="icon" type="image/x-icon" href="/picture-svgrepo-com.svg" />
    <script src="/bootstrap.js" defer></script>
  </head>
  <body>
    <div class="container">
      <%- include("navbar") %> <% messages.forEach((message, id) => { %>
      <div class="card text-bg-primary mb-3">
        <div class="card-header name-date">
          <div class="name"><%=message.name %></div>
          <div class="date">
            <%=message.created_at %>
            <a href="/message/<%= message.id %>"
              ><span class="badge rounded-pill text-bg-light">OPEN</span></a
            >
          </div>
        </div>
        <div class="card-body text-light">
          <p class="card-title"><%=message.message %></p>
        </div>
      </div>

      <% }) %>
    </div>
  </body>
</html>
